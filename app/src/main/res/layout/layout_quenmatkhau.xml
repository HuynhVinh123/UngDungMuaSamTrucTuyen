<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarQuenMatKhau"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorGreenDarkBackGround"
        app:titleTextColor="@color/colorWhite"
        >
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="8dp"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/edtEmailQuenMatKhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập Email"
                />
        </android.support.design.widget.TextInputLayout>

        <com.example.huynhvinh.applazada_java.CustomView.FButton
            android:id="@+id/btnLayLaiMatKhau"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Lấy lại mật khẩu"
            android:textColor="@color/colorWhite"
            android:background="@color/bgLogo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:text="Vui lòng nhập địa chỉ email để lấy lại mật khẩu"
            />
    </LinearLayout>

</LinearLayout>