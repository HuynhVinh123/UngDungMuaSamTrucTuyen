<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarThemSanPham"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorGreenDarkBackGround"
        android:theme="@style/ColorForToolbar"
        app:titleTextColor="@color/colorWhite"
        >
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"

        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            >
            <LinearLayout
                android:id="@+id/linearThongTinSanPhamTrong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="164dp"
                    android:layout_height="144dp"
                    android:src="@drawable/flashscreen"
                    />
                <com.example.huynhvinh.applazada_java.CustomView.FButton
                    android:id="@+id/btnThemSanPham"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thêm sản phẩm"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearThongTinSanPham"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_marginTop="30dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    >
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/custom_image"
                        android:layout_marginLeft="8dp"
                        android:layout_margin="8dp"
                        >
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="+ Thêm Hình Ảnh"
                            android:textColor="@color/colorRed"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:id="@+id/imgThemSanPham1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
                            />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/custom_image"
                        android:layout_marginLeft="8dp"
                        android:layout_margin="8dp"
                        >

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:text="+ Thêm Hình Ảnh"
                            android:textColor="@color/colorRed"
                            android:textSize="12sp" />
                        <ImageView
                            android:id="@+id/imgThemSanPham2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
                            />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/custom_image"
                        android:layout_marginLeft="8dp"
                        android:layout_margin="8dp"
                        >
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="+ Thêm Hình Ảnh"
                            android:textColor="@color/colorRed"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:id="@+id/imgThemSanPham3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
                            />
                    </FrameLayout>

                </LinearLayout>
                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrayChiTiet"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edtTenSanPham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tến sản phẩm"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:backgroundTint="@color/colorWhite"
                            android:background="@color/colorWhite"
                            android:textSize="14sp"
                            android:focusable="false"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGrayChiTiet"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edtMoTaSanPham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:background="@color/colorWhite"
                            android:hint="Mô tả sản phẩm"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="12dp"
                            android:textSize="14sp"
                            android:lines="3"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/colorGrayChiTiet"
                    />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:background="@drawable/custom_click"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/catogery"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"

                        />
                    <TextView
                        android:id="@+id/txtLoaiSanPham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loại sản phẩm"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/txtTenLoaiSanPham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhà cửa và đời sống"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGrayChiTiet"
                    />
                <LinearLayout
                    android:id="@+id/lnThuongHieuThemSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:background="@drawable/custom_click"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/catogery"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thương hiệu"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        />

                    <Spinner
                        android:id="@+id/spinnerThuongHieu"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></Spinner>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/colorGrayChiTiet"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    >

                    <LinearLayout
                        android:id="@+id/lnSanPhamYeuThich"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:background="@drawable/custom_click"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/price"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giá"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            />
                        <EditText
                            android:id="@+id/edtGiaSanPham"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Đặt giá"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@color/colorWhite"
                            android:background="@color/colorWhite"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            android:inputType="number"
                            />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGrayChiTiet"
                        />
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:background="@drawable/custom_click"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/warehouse"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kho hàng"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            />
                        <EditText
                            android:id="@+id/edtSoLuong"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Số lượng"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@color/colorWhite"
                            android:background="@color/colorWhite"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            android:inputType="number"
                            />

                    </LinearLayout>
                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGrayChiTiet"
                        />
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:background="@drawable/custom_click"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/scale"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cân nặng"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            />
                        <EditText
                            android:id="@+id/edtCanNang"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nhập cân nặng"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@color/colorWhite"
                            android:background="@color/colorWhite"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            android:inputType="number"
                            />

                    </LinearLayout>
                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGrayChiTiet"
                        />
                </LinearLayout>

                <com.example.huynhvinh.applazada_java.CustomView.FButton
                    android:id="@+id/btnThemGioHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thêm giỏ hảng"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="16dp"
                    />

            </LinearLayout>
        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>