<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">


            <LinearLayout
                android:id="@+id/linearThongTinSanPham"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="16dp"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edtSuaTenSanPham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tến sản phẩm"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:backgroundTint="@color/colorWhite"
                            android:background="@color/colorWhite"
                            android:textSize="14sp"

                            />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGrayChiTiet"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edtSuaMoTaSanPham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:background="@color/colorWhite"
                            android:hint="Mô tả sản phẩm"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="12dp"
                            android:textSize="14sp"
                            android:lines="8"
                            android:scrollbars="vertical"
                            android:gravity="left|top"
                            android:text="dsfsfs"
                            android:padding="4dp"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrayChiTiet"
                    android:layout_marginTop="4dp"
                    />
                <LinearLayout
                    android:id="@+id/lnLoaiSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:background="@drawable/custom_click"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/catogery"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"

                        />
                    <TextView
                        android:id="@+id/txtLoaiSanPham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loại sản phẩm"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/txtSuaTenLoaiSanPham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhà cửa và đời sống"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGrayChiTiet"
                    />
                <LinearLayout
                    android:id="@+id/lnThuongHieuThemSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:background="@drawable/custom_click"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/catogery"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thương hiệu"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        />

                    <Spinner
                        android:id="@+id/spinnerThuongHieu"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></Spinner>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGrayChiTiet"
                    />
                <LinearLayout
                    android:id="@+id/lnThongSoKyThuatThemSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:background="@drawable/custom_click"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:visibility="gone"

                    >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/catogery"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông số kỹ thuật"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrayChiTiet"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    >

                    <LinearLayout
                        android:id="@+id/lnSanPhamYeuThich"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:background="@drawable/custom_click"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/price"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giá"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            />
                        <EditText
                            android:id="@+id/edtSuaGiaSanPham"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Đặt giá"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@color/colorWhite"
                            android:background="@color/colorWhite"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            android:inputType="number"
                            />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGrayChiTiet"
                        />
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:background="@drawable/custom_click"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/warehouse"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kho hàng"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            />
                        <EditText
                            android:id="@+id/edtSuaSoLuong"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Số lượng"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@color/colorWhite"
                            android:background="@color/colorWhite"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            android:inputType="number"
                            />

                    </LinearLayout>
                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGrayChiTiet"
                        />

                </LinearLayout>

                <com.example.huynhvinh.applazada_java.CustomView.FButton
                    android:id="@+id/btn_XacNhanSua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="16dp"
                    />

            </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>