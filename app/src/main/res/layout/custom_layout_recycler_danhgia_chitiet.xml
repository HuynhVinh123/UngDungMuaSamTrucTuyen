<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/txtTieuDeDanhGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtNgayDanhGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21/04/2019"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        >

        <RatingBar
            android:id="@+id/rbDanhGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            style="?android:ratingBarStyleSmall"
            android:theme="@style/DoiMauNgoiSaoRatingBar"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/txtDuocDangBoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Được đăng bởi"
            android:textColor="@color/colorGray"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            />
    </FrameLayout>


    <TextView
        android:id="@+id/txtNoiDungDanhGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Được đăng bởi"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />



</LinearLayout>